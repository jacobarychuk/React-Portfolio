{
  "plugins": ["stylelint-order", "stylelint-prettier"],
  "rules": {
    "order/properties-order": [
      {
        "groupName": "GENERATED CONTENT",
        "properties": ["content"]
      },
      {
        "groupName": "POSITION AND LAYOUT",
        "properties": [
          "position",
          "z-index",
          "top",
          "right",
          "bottom",
          "left",
          "flex",
          "flex-grow",
          "flex-shrink",
          "flex-basis",
          "align-self",
          "order",
          "flex-direction",
          "flex-wrap",
          "justify-content",
          "align-items",
          "align-content",
          "gap",
          "row-gap",
          "column-gap",
          "float",
          "clear"
        ]
      },
      {
        "groupName": "DISPLAY AND VISIBILITY",
        "properties": ["display", "opacity", "transform"]
      },
      {
        "groupName": "CLIPPING",
        "properties": ["overflow", "clip"]
      },
      {
        "groupName": "ANIMATION",
        "properties": ["animation", "transition"]
      },
      {
        "groupName": "BOX MODEL",
        "properties": [
          "margin",
          "margin-top",
          "margin-right",
          "margin-bottom",
          "margin-left",
          "box-shadow",
          "border",
          "border-radius",
          "box-sizing",
          "width",
          "height",
          "padding",
          "padding-top",
          "padding-right",
          "padding-bottom",
          "padding-left"
        ]
      },
      {
        "groupName": "BACKGROUND",
        "properties": ["background", "background-color", "cursor"]
      },
      {
        "groupName": "TYPOGRAPHY",
        "properties": [
          "font-size",
          "line-height",
          "font-family",
          "font-weight",
          "font-style",
          "text-align",
          "text-transform",
          "word-spacing",
          "color"
        ]
      }
    ],
    "prettier/prettier": true
  }
}
